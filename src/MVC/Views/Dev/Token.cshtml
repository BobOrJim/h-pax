<h5>Id token header:</h5>
<br>
<pre>
    @Html.Raw(Model.IdTokenHeader)
</pre>

<h5>Id token payload:</h5>
<br>
<pre>
    @Html.Raw(Model.IdTokenPayload)
</pre>

<h5>Timestamps as datetime:</h5>
<br>
<p>nbf = @Model.IdToken_nbf</p>
<p>exp = @Model.IdToken_exp</p>
<p>auth_time = @Model.IdToken_auth_time</p>
<br>
<hr>

